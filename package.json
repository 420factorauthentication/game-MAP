{
    "dependencies": {
        "@types/node": "^18.11.8",
        "spriteling": "^1.1.5",
        "uuid": "^9.0.0"
    },
    "devDependencies": {
        "@types/jest": "^29.2.0",
        "jest": "^29.2.2",
        "run-script-os": "^1.1.6",
        "ts-jest": "^29.0.3"
    },
    "scripts": {
        "test": "jest",

        "preinstall": "run-script-os",
        "preinstall:default:win32": "npm install -g typescript && npm install -g prettier",
        "preinstall:darwin:linux": "sudo npm install -g typescript && sudo npm install -g prettier",

        "purge": "run-script-os",
        "purge:default:win32": "del ./_out",
        "purge:darwin:linux": "rm -Rf ./_out",

        "compile": "tsc -b",

        "mod-spriteling": "run-script-os",
        "mod-spriteling:default:win32": "robocopy ./node_modules/spriteling/dist ./_out/node_modules/spriteling/dist /E && del ./_out/node_modules/spriteling/dist/__tests__ && del ./_out/node_modules/spriteling/dist/spriteling.min.js",
        "mod-spriteling:darwin:linux": "mkdir -p ./_out/node_modules/spriteling && cp -Rf ./node_modules/spriteling/dist ./_out/node_modules/spriteling/dist && rm -Rf ./_out/node_modules/spriteling/dist/__tests__ && rm -f ./_out/node_modules/spriteling/dist/spriteling.min.js",

        "build": "npm run purge && npm run compile && npm run mod-spriteling"
    }
}
